<div class="modal fade" id="modalPostForm" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
  aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header text-center">
        <h4 class="modal-title w-100 font-weight-bold">Post Something</h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body mx-3">
        <div class="form-group">
            <label for="example-text">Post Title</label>
            <input type="text" id="example-text" class="form-control" aria-describedby="example-text" placeholder="enter a Post Title">
          </div>

        <div class="form-group">
            <label for="example-description">Post Body</label>
            <textarea class="form-control" id="example-description" aria-describedby="example-description" placeholder="enter your message"></textarea>
          </div>

          <div class="form-group">
            <label for="example-description">Image URL</label>
            <textarea class="form-control" id="image-url" aria-describedby="image-url" placeholder="example@domain.com"></textarea>
          </div>
        </div>

        
        

        <div class="modal-footer d-flex justify-content-center">
        <button class="btn btn-default" id="submitPost" data-dismiss="modal">Submit</button>
      </div>

      </div>
      
    </div>
  </div>
</div>

<div class="text-center">
  <a href="" class="btn btn-default btn-rounded mb-4" data-toggle="modal" data-target="#modalPostForm">Post Something</a>
</div>

